---
import Layout from '../layouts/Page.astro';
import { Container } from '@components/odyssey-theme';

const seo = {
	title: 'Kontakt | Niko Börger',
	description: 'Kontakt: Freiberuflicher Senior Fullstack Developer'
};

// SEO title will be updated by language toggle script
if (typeof window !== 'undefined') {
	const savedLang = localStorage.getItem('preferred-language') || 'de';
	if (savedLang === 'en') {
		seo.title = 'Contact | Niko Börger';
		seo.description = 'Contact: Freelance Senior Fullstack Developer';
	}
}
---

<Layout seo={seo}>
	<Container>
		<section class="contact__section">
			<p
				class="contact__subtitle"
				data-i18n-en="Your Partner for Software Projects"
			>
				Ihr Partner für Softwareprojekte
			</p>
			<p
				data-i18n-html-en="With experience in delivering tailor-made software solutions, I help projects succeed from concept to launch.<br><br>I look forward to hearing from you if you’re looking for a strong partner for your project."
			>
				Mit meinem Spezialwissen in der Umsetzung maßgeschneiderter Softwarelösungen helfe ich Projekten, vom Konzept bis zum Launch erfolgreich zu sein.</br></br>
				Ich freue mich auf Ihre Nachricht, wenn Sie einen starken Partner für Ihr Projekt suchen.
			</p>
			<p class="contact__info">
				<em
					id="phone-placeholder"
				>[Please enable Javascript]</em> • <em
					id="mail-placeholder"
				>[Please enable Javascript]</em>
			</p>
		</section>
	</Container>
	<script>
		const user = 'niko';
		const domain = 'boerger.dev';
		const mailPlaceholder = document.getElementById('mail-placeholder');
		if (mailPlaceholder) {
			mailPlaceholder.innerHTML = `<a href="mailto:${user}@${domain}">${user}@${domain}</a>`;
		}

		const phone = '+49 174 6098501';
		const phonePlaceholder = document.getElementById('phone-placeholder');
		if (phonePlaceholder) {
			phonePlaceholder.textContent = phone;
		}
	</script>
	<style>
      .contact__section {
          max-width: 700px;
          margin: 0 auto 3rem auto;
          padding: 2rem 1rem;
          background: var(--theme-surface-1);
          border-radius: 1.5rem;
          box-shadow: 0 2px 16px rgba(0, 0, 0, 0.04);
          display: flex;
          flex-direction: column;
          align-items: center;
      }

      .contact__title {
          font-size: 2.5rem;
          margin-bottom: 0.5rem;
          color: var(--theme-primary);
      }

      .contact__subtitle {
          font-size: 1.3rem;
          margin-bottom: 1.5rem;
          color: var(--theme-on-surface-2);
          font-weight: 600;
      }

      .contact__info {
          margin-top: 2rem;
          font-size: 1.1rem;
          color: var(--theme-on-surface-2);
      }
	</style>
</Layout>
